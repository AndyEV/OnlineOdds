@model DeleteOdd


@{
    ViewData["Title"] = "Delete Odd - Back Office";
}


    <div class="container">

        <div class="text-center">
            <form method="post" asp-action="odd_delete" asp-controller="admin" role="form" class="form-horizontal">
                @Html.ValidationSummary()
                <input asp-for="Id" type="hidden">

                <div class="form-body">
                    <div class="note note-danger">
                        Are you sure you want to delete this Odd <br />
                        @Model.HomeTeam (@Model.HomeOdd) - Draw(@Model.DrawOdd) - @Model.AwayTeam (@Model.AwayOdd)
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="index" asp-controller="admin" class="btn btn-default">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
            
        </div>
    </div>


